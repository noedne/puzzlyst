<div class="open">
  <ul class="dropdown-menu">
    <li>
      <a class="set-damage-item">
        Set damage
      </a>
    </li>
    <li>
      <a class="add-modifier-item">
        Add modifier
      </a>
    </li>
    {{#if isManaTile}}
    <li>
      <a class="mana-tile-item">
        {{#if isManaTileDepleted}}Refresh{{else}}Deplete{{/if}} mana tile
      </a>
    </li>
    {{/if}}
    {{#compare deleteMinion '||' deleteTile}}
    <li>
      <a class="delete-item">
        Delete {{#if deleteMinion}}minion{{else}}tile{{/if}}
      </a>
    </li>
    {{/compare}}
  </ul>
</div>