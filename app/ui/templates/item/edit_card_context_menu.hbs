<div class="open">
  <ul class="dropdown-menu">
    {{#if setDamage}}
    <li>
      <a class="set-damage-item">
        Set damage
      </a>
    </li>
    {{/if}}
    {{#if setDurability}}
    <li>
      <a class="set-durability-item">
        Set durability
      </a>
    </li>
    {{/if}}
    {{#if addModifier}}
    <li>
      <a class="add-modifier-item">
        Add modifier
      </a>
    </li>
    {{/if}}
    {{#if isManaTile}}
    <li>
      <a class="mana-tile-item">
        {{#if isManaTileDepleted}}Refresh{{else}}Deplete{{/if}} mana tile
      </a>
    </li>
    {{/if}}
    {{#if deleteMinion}}
    <li>
      <a class="delete-minion-item">
        Delete minion
      </a>
    </li>
    {{/if}}
    {{#if deleteTile}}
    <li>
      <a class="delete-tile-item">
        Delete tile
      </a>
    </li>
    {{/if}}
  </ul>
</div>